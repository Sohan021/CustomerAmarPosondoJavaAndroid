<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/head"
        style="@style/Base.TextAppearance.AppCompat.Body1"

        >
        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="User Name"
            android:textColor="@color/appclr"
            android:textSize="14dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="Phone Number"
            android:textAlignment="viewEnd"
            android:textColor="@color/appclr"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Product Price"
            android:layout_below="@+id/order_phone_number"
            android:textColor="@color/appclr"
            android:textSize="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/order_addresss_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Address, City"
            android:layout_below="@+id/order_total_price"
            android:textColor="@color/appclr"
            android:textSize="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Date, Time"
            android:layout_below="@+id/order_addresss_city"
            android:textColor="@color/appclr"
            android:textSize="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/show_all_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="আপনি কি পন্যগুলি পুনরায় দেখতে চাচ্ছেন???"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@drawable/border"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            />


    </RelativeLayout>

</RelativeLayout>